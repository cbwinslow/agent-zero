# Agent Zero Environment Configuration
# Copy this file to .env and update with your API keys and settings

# ============================================
# LLM Provider API Keys
# ============================================

# OpenAI
# OPENAI_API_KEY=sk-...

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
# GOOGLE_API_KEY=...

# OpenRouter - Unified API for multiple models
# OPENROUTER_API_KEY=sk-or-v1-...

# Groq
# GROQ_API_KEY=gsk_...

# DeepSeek
# DEEPSEEK_API_KEY=sk-...

# xAI
# XAI_API_KEY=xai-...

# Mistral
# MISTRAL_API_KEY=...

# HuggingFace
# HUGGINGFACE_API_KEY=hf_...

# ============================================
# Agent Zero Authentication
# ============================================
# AUTH_LOGIN=admin
# AUTH_PASSWORD=admin123

# ============================================
# Remote Function Calling (RFC) Settings
# ============================================
# RFC_PASSWORD=your_rfc_password_here
# ROOT_PASSWORD=your_root_password_here

# ============================================
# Memory MCP Server Configuration
# ============================================
# Host and port for the memory management MCP server
MEMORY_MCP_HOST=localhost
MEMORY_MCP_PORT=3001

# Enable/disable memory MCP server
MEMORY_MCP_ENABLED=true

# Memory compression settings
MEMORY_COMPRESSION_THRESHOLD=0.9
MEMORY_MAX_SIZE=10000

# Knowledge base settings
KNOWLEDGE_AUTO_IMPORT=true
KNOWLEDGE_DEFAULT_AREA=main

# ============================================
# Automatic Memory Monitor Configuration
# ============================================
# Enable automatic memory monitoring
MEMORY_MONITOR_ENABLED=true

# Ollama model for memory analysis (lightweight model recommended)
MEMORY_MONITOR_MODEL=llama3.2:3b

# Minimum importance score to save a memory (0.0 to 1.0)
MEMORY_IMPORTANCE_THRESHOLD=0.5

# Time-to-live for short-term memories in seconds (default: 1 hour)
MEMORY_SHORT_TERM_TTL=3600

# Auto-save memories to long-term storage
MEMORY_AUTO_SAVE=true

# ============================================
# Multi-Agent System Configuration
# ============================================
# Enable multi-agent mode
MULTI_AGENT_ENABLED=true

# Maximum number of concurrent sub-agents
MAX_SUB_AGENTS=5

# Sub-agent profiles (comma-separated)
# Available: researcher, developer, analyst, planner, executor
SUB_AGENT_PROFILES=researcher,developer,analyst

# Agent coordination strategy: sequential, parallel, adaptive
AGENT_COORDINATION_STRATEGY=adaptive

# ============================================
# Advanced Settings
# ============================================
# Enable debug logging
# DEBUG=false

# Custom model endpoints
# CUSTOM_MODEL_ENDPOINT=http://localhost:8000

# ============================================
# UI and Theme Configuration
# ============================================
# Default theme (dark, light, monokai, dracula, nord, solarized_dark, solarized_light, gruvbox)
UI_THEME=dark

# Theme customization
UI_BOLD_HEADINGS=true
UI_ITALIC_THOUGHTS=true
UI_UNDERLINE_LINKS=true
UI_PADDING_MESSAGES=true
UI_SHOW_TIMESTAMPS=false

# ============================================
# Error Tracking Configuration
# ============================================
# Enable error tracking and logging
ERROR_TRACKING_ENABLED=true

# Path to error tracking database
ERROR_TRACKER_DB_PATH=logs/error_tracker.json

# ============================================
# Git Integration Configuration
# ============================================
# GitHub Personal Access Token for API access
# GITHUB_TOKEN=ghp_...

# GitLab Personal Access Token
# GITLAB_TOKEN=glpat-...

# GitLab instance URL (defaults to gitlab.com)
# GITLAB_URL=https://gitlab.com

# ============================================
# Additional MCP Servers
# ============================================
# See conf/mcp_servers_available.json for available servers
# Configure individual server settings here as needed

# Brave Search API key
# BRAVE_API_KEY=...

# PostgreSQL connection string
# POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/dbname

# Google Cloud service account credentials path
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Slack bot token
# SLACK_BOT_TOKEN=xoxb-...

# AWS credentials for knowledge base
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1

# Kubernetes config path
# KUBECONFIG=~/.kube/config
