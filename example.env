# Agent Zero Environment Configuration
# Copy this file to .env and update with your API keys and settings

# ============================================
# LLM Provider API Keys
# ============================================

# OpenAI
# OPENAI_API_KEY=sk-...

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
# GOOGLE_API_KEY=...

# OpenRouter - Unified API for multiple models
# OPENROUTER_API_KEY=sk-or-v1-...

# Groq
# GROQ_API_KEY=gsk_...

# DeepSeek
# DEEPSEEK_API_KEY=sk-...

# xAI
# XAI_API_KEY=xai-...

# Mistral
# MISTRAL_API_KEY=...

# HuggingFace
# HUGGINGFACE_API_KEY=hf_...

# ============================================
# Agent Zero Authentication
# ============================================
# AUTH_LOGIN=admin
# AUTH_PASSWORD=admin123

# ============================================
# Remote Function Calling (RFC) Settings
# ============================================
# RFC_PASSWORD=your_rfc_password_here
# ROOT_PASSWORD=your_root_password_here

# ============================================
# Memory MCP Server Configuration
# ============================================
# Host and port for the memory management MCP server
MEMORY_MCP_HOST=localhost
MEMORY_MCP_PORT=3001

# Enable/disable memory MCP server
MEMORY_MCP_ENABLED=true

# Memory compression settings
MEMORY_COMPRESSION_THRESHOLD=0.9
MEMORY_MAX_SIZE=10000

# Knowledge base settings
KNOWLEDGE_AUTO_IMPORT=true
KNOWLEDGE_DEFAULT_AREA=main

# ============================================
# Multi-Agent System Configuration
# ============================================
# Enable multi-agent mode
MULTI_AGENT_ENABLED=true

# Maximum number of concurrent sub-agents
MAX_SUB_AGENTS=5

# Sub-agent profiles (comma-separated)
# Available: researcher, developer, analyst, planner, executor
SUB_AGENT_PROFILES=researcher,developer,analyst

# Agent coordination strategy: sequential, parallel, adaptive
AGENT_COORDINATION_STRATEGY=adaptive

# ============================================
# Advanced Settings
# ============================================
# Enable debug logging
# DEBUG=false

# Custom model endpoints
# CUSTOM_MODEL_ENDPOINT=http://localhost:8000
